

<% if user_signed_in?%>
<h1>Friends</h1>
  <div id="friends">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>User name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Twitter</th>
          <th>User Id</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
        <% if friend.user == current_user%>
          <tr>
            <th>
            <%= link_to friend.first_name+ ' '+ friend.last_name ,friend %>
            </th>
            <th>
              <%= friend.email %>
            </th>
            <th>
              <%= friend.phone %>
            </th>
            <th>
              <%= friend.twitter %>
            </th>
            <th>
              <%= friend.user_id %>
            </th>
            <th>
              <%= link_to "Edit", edit_friend_path(friend) %>
            </th>
        </tr>
        <% end %>
        <% end %>
      <tbody>
    </table>
  </div>

  <%= link_to "Add Friend", new_friend_path,class:"btn btn-primary" %>
<% else %>
  <h1>Hello world!</h1>
<p>This is my ruby on rails web app.</p>
<% end %>
